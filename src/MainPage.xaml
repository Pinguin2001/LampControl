<Page
    x:Class="LampControl.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:LampControl.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LampControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitlebarControl
            x:Name="AppTitleBar"
            Grid.Row="0"
            Height="32" />
        <Button
            Grid.Row="1"
            Width="45"
            Height="45"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="AboutButton_Click">
            <FontIcon Glyph="&#xE946;" />
        </Button>
        <ToggleButton
            x:Name="TorchToggleBtn"
            Grid.Row="1"
            Width="64"
            Height="64"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="TorchToggleBtn_Click">
            <FontIcon FontSize="30" Glyph="&#xEA80;" />
        </ToggleButton>
    </Grid>
</Page>
